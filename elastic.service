[Unit]
Description=Starts Elastic docker container on startup and keep running.

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
ExecStart=docker-compose start elasticsearch -d -f /home/searchengine/elasticfscrawler/docker-compose.yaml
WorkingDirectory=/home/searchengine/elasticfscrawler
Restart=always
RestartSec=5
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=%n